{
    "name": "rougin/refinery",
    "description": "'Ready-to-eat' migrations for Codeigniter",
    "keywords": [
        "refinery",
        "database",
        "migrations",
        "php"
    ],
    "homepage": "https://github.com/rougin/refinery",
    "license": "MIT",
    "authors": [
        {
            "name": "Rougin Royce Gutib",
            "email": "rougingutib@gmail.com",
            "homepage": "http://rougin.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "rougin/blueprint": "~0.5",
        "rougin/describe": "dev-master",
        "rougin/spark-plug": "~0.5"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "rougin/codeigniter": "~3.0"
    },
    "bin": [
        "bin/refinery",
        "bin/refinery.php"
    ],
    "autoload": {
        "psr-4": {
            "Rougin\\Refinery\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rougin\\Refinery\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "suggest": {
        "rougin/codeigniter": "Installs CodeIgniter core through Composer",
        "rougin/combustor": "Lets you generate controllers, models, and views from database tables for CodeIgniter"
    }
}
